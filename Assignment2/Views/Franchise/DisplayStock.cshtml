@model IEnumerable<Assignment2.Models.StoreInventory>

@{
    ViewData["Title"] = "Store Inventory";
   
   
}

 <h2>Store Inventory  - @Html.Raw(ViewBag.myData)    </h2>
 <form asp-controller="Franchise" asp-action="CreateNewStock" class="form-inline">        

    <label for="search">Search by product name:</label>
    <input type="text"  class="form-control" id="search"  name="SearchString" value="@ViewData["SearchString"]" placeholder="Search">
     <input class="saveButton" type="submit" value="Search"  /> 

 
</form>
<br><br>
<table id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.StockLevel)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockLevel)
            </td>
        </tr>
}
    </tbody>
</table>
<center> <a class="backButton" asp-action="Dashboard">Back</a> </center>
