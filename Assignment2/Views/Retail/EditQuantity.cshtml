@model  Assignment2.Models.StoreInventory
@{
    ViewBag.Title = "Request Quantity";
}
<h2> Request Request </h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()    
    <div class="form-horizontal">
        <h4> Stock Request </h4>
        <hr />
         @Html.ValidationSummary(true)
        <h3> @Html.DisplayNameFor(model => model.ProductID)</h3>
         @Html.DisplayFor(model => model.ProductID)
        <h3> @Html.DisplayNameFor(model => model.Product.Name)</h3>
         @Html.DisplayFor(model =>  model.Product.Name)

       @Html.DisplayNameFor(model => model.StockLevel)
        <div class="form-group">
            @Html.LabelFor(model => model.StockLevel, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StockLevel)
                @Html.ValidationMessageFor(model => model.StockLevel)
            </div>
        </div>
        @*Genre and Price removed for brevity.*@        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@ViewBag.stockLevel" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "StockRequestThreshold")
</div>
