@model IEnumerable<Assignment2.Models.StockRequest>

@{
    ViewData["Title"] = "Stock Requests";
   
   
}

<center>
    <img src="~/images/stockRequest.png" width="100px"/> 
    <h2> Stock Requests </h2> 
</center>
<table id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
               <th>
                @Html.DisplayNameFor(model => model.StoreID)
            </th>
            <th> Process Stock Requests </th>           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.StoreID)
            </td>
                    <td>
                <a class="saveButton" asp-controller="StockRequest" asp-action="Details" asp-route-id="@item.StockRequestID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
 <h4> @Html.Raw(ViewBag.myData)    </h4>
